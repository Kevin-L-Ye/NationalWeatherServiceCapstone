@using Capstone.Web.Models;
@model NationalPark

@{
    ViewBag.Title = "ParkDetail";
    Layout = "~/Views/Shared/shared_layout.cshtml";
}

<section class="centeredPanel">

    <div class="park_name">
        @Model.ParkName
    </div>

    <img src="@("/Content/img/parks/" + Model.ParkCode.ToLower() + ".jpg")"/>

    <div class="detail_quote">
        <p style="margin-top: 0px;"><i>"@Model.InspirationalQuote"</i> - @Model.InspirationalQuoteSource</p>
    </div>

    <div class="detail_info">
        <p>@Model.State | Climate: @Model.Climate</p>
        <p>Number of Campsites: @Model.NumberOfCampsites | Entry Fee: @(Convert.ToDecimal(Model.EntryFee).ToString("C"))</p>
    </div>

    <div class="detail_description">
        @Model.ParkDescription
        <p></p>
    </div>

    <table class="detail_table">
        <tr>
            <td>Year Founded: @Model.YearFounded</td>
        </tr>
        <tr>
            <td>Annual Visitors: @Model.AnnualVisitorCount.ToString("N0")</td>
        </tr>
        <tr>
           <td>Acreage: @Model.Acreage.ToString("N0")</td>
        </tr>
        <tr>
           <td>Elevation: @Model.ElevationInFeet.ToString("N0") feet</td>
        </tr>
        <tr>
            <td>Number of Animal Species: @Model.NumberOfAnimalSpecies.ToString("N0")</td>
        </tr>
        <tr>
            <td>Miles of Trail: @Model.MilesOfTrail.ToString("N0") miles</td>
        </tr>
    </table>

    <p style="font-size: 25px;">Current temperatures are in @Session["unitOfTemperature"]</p>
    @using (Html.BeginForm("ParkDetail", "Home", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.ParkName, Model.ParkName)
        @Html.HiddenFor(m => m.ParkCode, Model.ParkCode)
        @Html.HiddenFor(m => m.State, Model.State)
        @Html.HiddenFor(m => m.Acreage, Model.Acreage)
        @Html.HiddenFor(m => m.ElevationInFeet, Model.ElevationInFeet)
        @Html.HiddenFor(m => m.MilesOfTrail, Model.MilesOfTrail)
        @Html.HiddenFor(m => m.NumberOfCampsites, Model.NumberOfCampsites)
        @Html.HiddenFor(m => m.Climate, Model.Climate)
        @Html.HiddenFor(m => m.YearFounded, Model.YearFounded)
        @Html.HiddenFor(m => m.AnnualVisitorCount, Model.AnnualVisitorCount)
        @Html.HiddenFor(m => m.InspirationalQuote, Model.InspirationalQuote)
        @Html.HiddenFor(m => m.InspirationalQuoteSource, Model.InspirationalQuoteSource)
        @Html.HiddenFor(m => m.ParkDescription, Model.ParkDescription)
        @Html.HiddenFor(m => m.EntryFee, Model.EntryFee)
        @Html.HiddenFor(m => m.NumberOfAnimalSpecies, Model.NumberOfAnimalSpecies)
        @Html.HiddenFor(m => m.NextFiveDayWeather, Model.NextFiveDayWeather)
        @Html.HiddenFor(m => m.ValidParkCodes, Model.ValidParkCodes)

        <div>
            <label class="temp_label">Fahrenheit</label>
            @Html.RadioButtonFor(m => m.UnitOfTemperature, "Fahrenheit")
        </div>
        <div>
            <label class="temp_label">Celsius</label>
            @Html.RadioButtonFor(m => m.UnitOfTemperature, "Celsius")
        </div>
        <br/>
    <button>Change Temperature</button>
    <br/>
    }

    @for(int i = 0; i < 5; i++)
    {
        <div class="five_day_forecast">
        @if (Model.NextFiveDayWeather[i].FiveDayForecastValue == 1)
        {
            <div>
                <img src="@("/Content/img/weather/" + Model.NextFiveDayWeather[i].Forecast + ".png")" class="big_weather_img"/>
                <p class="weather_high">High: @Model.NextFiveDayWeather[i].High</p>
                <p class="weather_low">Low: @Model.NextFiveDayWeather[i].Low</p>
            </div>
        }
        else
        {
            <div>
                <img src="@("/Content/img/weather/" + Model.NextFiveDayWeather[i].Forecast + ".png")" class="small_weather_img" />
                <p class="weather_high">High: @Model.NextFiveDayWeather[i].High</p>
                <p class="weather_low">Low: @Model.NextFiveDayWeather[i].Low</p>
            </div>
        }
        </div>
    }

</section>

