@using Capstone.Web.Models;
@model List<NationalPark>

@{
    ViewBag.Title = "HomePage";
    Layout = "~/Views/Shared/shared_layout.cshtml";
}

<section class="centeredPanel">

    <h2>Home Page</h2>

    <div>
        @foreach (NationalPark park in Model)
        {
           <div>
                <a href="@Url.Action("ParkDetail", "Home", new { code = park.ParkCode })" >
                    <img src="@("/Content/img/parks/" + park.ParkCode.ToLower() + ".jpg")" />
               </a>
           </div>

            <a href="@Url.Action("ParkDetail", "Home", new { code = park.ParkCode })">
                <div>@park.ParkName</div>
            </a>
            <div>@park.State</div>
            <div>@park.ParkDescription</div>
            }
</div>

</section>